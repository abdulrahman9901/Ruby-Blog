<% if user_signed_in? %>
  <%= button_to "New Blog Post", new_blog_post_path, method: :get %>
<% end %>
<% @blog_posts.each do |blog_post| %>
    <div class="bg-blue-500 text-white p-4">
        <h1> <%= link_to blog_post.title , blog_post %></h1>
        <p><%= blog_post.body %></p>
    </div>
<% end %>